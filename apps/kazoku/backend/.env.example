# Server
NODE_ENV=development
PORT=8006
API_PREFIX=/api/v1

# Database (MySQL Docker)
DB_HOST=localhost
DB_PORT=3307
DB_NAME=family_hub
DB_USER=family_hub_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_CONNECTION_LIMIT=10

# JWT - IMPORTANT: Generate secure secrets for production!
# Use: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_USE_OPENSSL_RAND_HEX_32
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=CHANGE_ME_USE_OPENSSL_RAND_HEX_32
JWT_REFRESH_EXPIRES_IN=30d

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3018,http://localhost:3000,http://localhost:5173

# Google Calendar (optional)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_REDIRECT_URI=http://localhost:8006/api/v1/auth/google/callback

# Discord (optional)
# DISCORD_WEBHOOK_URL=

# Telegram (optional)
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_CHAT_ID=
