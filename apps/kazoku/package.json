{
  "name": "@shinkofa/kazoku",
  "version": "1.0.0",
  "description": "Kazoku (Family Hub) - Organisateur familial holistique adapté neurodiversité (La Voie Shinkofa)",
  "author": "Jay The Ermite <contact@shinkofa.com>",
  "license": "CC-BY-NC-SA-4.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "echo 'Tests skipped - TODO: configure Jest'",
    "test:backend": "echo 'Backend tests skipped'",
    "test:frontend": "echo 'Frontend tests skipped'",
    "lint": "echo 'Lint skipped - TODO: configure ESLint'",
    "lint:backend": "echo 'Backend lint skipped'",
    "lint:frontend": "echo 'Frontend lint skipped'",
    "type-check": "echo 'Type-check skipped - TODO: configure TypeScript'"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "family-planner",
    "organization",
    "neurodiversity",
    "human-design",
    "shinkofa",
    "collaborative",
    "calendar",
    "tasks",
    "meal-planning"
  ]
}
