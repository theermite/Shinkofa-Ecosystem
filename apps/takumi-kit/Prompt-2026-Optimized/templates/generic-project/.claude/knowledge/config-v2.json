{
  "version": "2.0.0",
  "created": "2026-01-29",
  "description": "Knowledge Library System - Enriched Metadata & Search",
  "categories": {
    "coaching": {
      "description": "Frameworks coaching, méthodologies, personas clients",
      "enabled": true,
      "auto_tags": true,
      "subdirectories": ["frameworks", "methodologies", "personas", "neurodivergence"]
    },
    "business": {
      "description": "Business plan, stratégie, positioning, master plan",
      "enabled": true,
      "auto_tags": true,
      "subdirectories": ["shinkofa", "strategy", "branding", "master-plan"]
    },
    "technical": {
      "description": "Architecture, décisions techniques, patterns",
      "enabled": true,
      "auto_tags": false,
      "subdirectories": ["architecture", "decisions", "patterns", "stack"]
    }
  },
  "metadata": {
    "required_fields": ["title", "category"],
    "optional_fields": ["tags", "author", "date", "source", "version", "related"],
    "auto_extract": {
      "title": true,
      "tags": true,
      "date": true
    },
    "track_versions": true,
    "require_source": false
  },
  "search": {
    "enabled": true,
    "max_results": 10,
    "relevance_threshold": 0.7,
    "search_fields": ["title", "content", "tags", "category"],
    "fuzzy_matching": true
  },
  "indexing": {
    "auto_index_on_save": true,
    "full_reindex_interval_days": 30,
    "chunk_size": 800,
    "chunk_overlap": 100
  },
  "embeddings": {
    "enabled": false,
    "provider": "openai",
    "model": "text-embedding-3-small",
    "api_key_env": "OPENAI_API_KEY"
  },
  "sync": {
    "enabled": false,
    "source_of_truth": "Instruction-Claude-Code",
    "auto_sync_on_change": false
  },
  "backup": {
    "enabled": true,
    "interval_days": 7,
    "keep_versions": 5,
    "backup_path": ".claude/backups/knowledge"
  }
}
